<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true, class:"edit_book",id:"edit_book_#{@book.id}" do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <%= f.label :title, for:"book_title" %>
  <%= f.text_field :title,class:"book_title",name:"book[title]",id:"book_title" %>
  </div>
  <div class="field">
  <%= f.label :body, for:"book_body" %>
  <%= f.text_area :body,class:"book_body",name:"book[body]",id:"book_body" %>
  </div>
  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>
<%= link_to "Show",book_path(@book.id) %> | <%= link_to "Back",books_path %>
